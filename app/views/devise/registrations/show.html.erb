<div class="user-account-container">
  <h1>Hello, <%= @user.username %>!</h1>

  <div class="user-info">
    <p><strong>Email:</strong> <%= @user.email %></p>

    <% if @user.respond_to?(:created_at) %>
      <p><strong>Account Created On:</strong> <%= @user.created_at.strftime('%B %d, %Y') %></p>
    <% end %>
  </div>

  <div class="user-actions">
    <%= link_to 'Edit Account', edit_user_registration_path, class: 'btn btn-primary' %>
    <%= link_to 'View Previous Orders', past_orders_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit Payment Information', edit_payment_path, class: 'btn btn-primary' %>
    <%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
  </div>
</div>